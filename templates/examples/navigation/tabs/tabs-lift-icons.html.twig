{% set id = 'tabs-'~random() %}

<twig:tabs style="lift" class="w-full">
    <twig:tabItemHeader id="{{ id }}">
        <twig:ux:icon name="iconoir:play" class="size-4 me-2"/>
        Live
    </twig:tabItemHeader>
    <twig:tabItemContent>Tab content 1</twig:tabItemContent>
    <twig:tabItemHeader id="{{ id }}" active="true">
        <twig:ux:icon name="iconoir:emoji" class="size-4 me-2"/>
        Laugh
    </twig:tabItemHeader>
    <twig:tabItemContent>Tab content 2</twig:tabItemContent>
    <twig:tabItemHeader id="{{ id }}">
        <twig:ux:icon name="iconoir:heart" class="size-4 me-2"/>
        Love
    </twig:tabItemHeader>
    <twig:tabItemContent>Tab content 3</twig:tabItemContent>
</twig:tabs>
